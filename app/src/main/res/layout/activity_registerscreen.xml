<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".registerscreen">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/ivlogupperbar"
        android:src="@mipmap/regupperbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivlogshadow"
        android:layout_alignBottom="@+id/ivlogupperbar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:src="@mipmap/shadow" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ivlogshadow"
        android:layout_marginTop="-50dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/regusername"
                android:hint=" user name"
                android:background="@mipmap/usernamebg" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/regpassword"
                android:hint=" password"
                android:background="@mipmap/passwordbg"
                android:layout_marginTop="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/regrepassword"
                android:hint=" re-enter password"
                android:layout_marginTop="8dp"
                android:background="@mipmap/usernamebg" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/regemail"
                android:inputType="textEmailAddress"
                android:hint=" e-mail"
                android:background="@mipmap/passwordbg"
                android:layout_marginTop="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/regphonenumber"
                android:layout_marginTop="8dp"
                android:background="@mipmap/usernamebg"
                android:inputType="phone"
                android:hint=" phone number" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/regbloodtype"
                android:hint=" blood type"
                android:background="@mipmap/passwordbg"
                android:layout_marginTop="8dp"
                android:inputType="text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/regbirthday"
                android:layout_marginTop="8dp"
                android:background="@mipmap/usernamebg"
                android:hint="birth day"
                android:inputType="date" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id="@+id/regaddress"
                android:background="@mipmap/passwordbg"
                android:layout_marginTop="8dp"
                android:hint=" adress"
                android:inputType="textMultiLine" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Register"
                android:id="@+id/regbutton"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
